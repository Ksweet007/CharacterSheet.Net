<script>
    
    $(document).ready(function() {
        var sPath=window.location.pathname;
        var sPage = sPath.substring(sPath.lastIndexOf('/') + 1);
        $(".pmd-sidebar-nav").each(function(){
            $(this).find("a[href='#']").parents(".dropdown").addClass("open");
            $(this).find("a[href='#']").parents(".dropdown").find('.dropdown-menu').css("display", "block");
            $(this).find("a[href='#']").parents(".dropdown").find('a.dropdown-toggle').addClass("active");
            $(this).find("a[href='#']").addClass("active");
        });
    });
</script>
    <script type="text/javascript">
        (function() {
            "use strict";
            var toggles = document.querySelectorAll(".c-hamburger");
            for (var i = toggles.length - 1; i >= 0; i--) {
                var toggle = toggles[i];
                toggleHandler(toggle);
            };
            function toggleHandler(toggle) {
                toggle.addEventListener( "click", function(e) {
                    e.preventDefault();
                    (this.classList.contains("is-active") === true) ? this.classList.remove("is-active") : this.classList.add("is-active");
                });
            }

        })();
    </script>

       
    <script src="~/lib/require/require.js" data-main="app/main"></script>
    

<!-- Scripts Ends -->
