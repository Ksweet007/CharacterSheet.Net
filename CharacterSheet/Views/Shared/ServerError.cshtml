@using CharacterSheet.Helpers

@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Sweet Character Sheets</title>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black" />
    <meta name="format-detection" content="telephone=no" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @Styles.Render("~/Content")

</head>
<body>
<div id="applicationHost">     
    <div class="alert alert-danger" role="alert">
        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
        <span class="sr-only">Error:</span>
        @Resources.Common.ErrorHeader
    </div>
    <div class="alert alert-danger" role="alert">       
        <p>@Resources.Common.ErrorText</p>
        <p>
            <button type="button" class="btn btn-default btn-sm">
                <span class="glyphicon glyphicon-arrow-left"></span>@Resources.Common.ErrorBackButton
            </button>
        </p>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.2/jquery.min.js"></script>
        <script>window.jQuery || document.write('<script src="js/jquery-2.2.1.min.js">\x3C/script>')</script>
    </div>
</div>
<script type="text/javascript">
    $(function() {
        $("#goback").prop('disabled', false);
        $("#goback").click(function() {
            history.back();
        });
    });
</script>
</body>
</html>